<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorite.MovieFavorite.DetailMovieFavoriteActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster_banner_movie_favorite"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:tint="@color/poster_banner_tint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/btn_back_movie_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ripple_back_bg"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/poster_banner_movie_favorite"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewPosterDetail_movie_favorite"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="138dp"
            android:layout_marginBottom="8dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/poster_banner_movie_favorite"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/poster_banner_movie_favorite"
            app:layout_constraintTop_toTopOf="@+id/poster_banner_movie_favorite"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/poster_detail_movie_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                tools:src="@android:color/darker_gray" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_title_detail_movie_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cardviewPosterDetail_movie_favorite"
            app:layout_constraintTop_toBottomOf="@+id/poster_banner_movie_favorite"
            app:layout_constraintVertical_bias="0.0"
            tools:text="How To Train Your Dragon: The Hidden World" />

        <Button
            android:id="@+id/btn_dislike_movie_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_sad"
            android:drawablePadding="1dp"
            android:text="@string/dislike"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5_movie_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_movie_favorite"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view_movie_favorite"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardviewPosterDetail_movie_favorite"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view3_movie_favorite"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_movie_favorite"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5_movie_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_list"
            android:text="@string/synopsys"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3_movie_favorite"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/txt_overviewDetail_movie_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5_movie_favorite"
            app:layout_constraintVertical_bias="0.0"
            tools:text="As Hiccup fulfills his dream of creating a peaceful dragon utopia, Toothless’ discovery of an untamed, elusive mate draws the Night Fury away. When danger mounts at home and Hiccup’s reign as village chief is tested, both dragon and rider must make impossible decisions to save their kind." />

        <ProgressBar
            android:id="@+id/progressBar_detailMovie_movie_favorite"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/cardviewPosterDetail_movie_favorite"
            app:layout_constraintEnd_toEndOf="@+id/cardviewPosterDetail_movie_favorite"
            app:layout_constraintStart_toStartOf="@+id/cardviewPosterDetail_movie_favorite"
            app:layout_constraintTop_toTopOf="@+id/cardviewPosterDetail_movie_favorite" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>